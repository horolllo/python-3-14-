from random import*
import turtle

line = turtle.Turtle()
line.speed(10)
line.penup()
line.goto(-380, 240)

line.write('1')
line.right(90)
line.forward(20)
line.pendown()
line.forward(500)
line.penup()
line.backward(520)
line.left(90)
line.forward(300)

line.write('2')
line.right(90)
line.forward(20)
line.pendown()
line.forward(500)
line.penup()
line.backward(520)
line.left(90)
line.forward(300)


line.write('3')
line.right(90)
line.forward(20)
line.pendown()
line.forward(500)


turtle.done()

